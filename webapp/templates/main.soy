{namespace diem}

/**
 * Pattern editor.
 * @param name
 * @param user_uri
 * @param logout
 * @param login
 */
{template .header}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Fabricate Diem</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <script src="/js/vendor/jquery-3.1.1.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>
   </head>

  <body>
    <div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
              <li role="presentation"><a href="/patterns">Patterns</a>
              <li role="presentation"><a href="/fabrics">Fabrics</a>
              <li role="presentation"><a href="/models">Models</a>
            {if $name}
              <li role="presentation"><a href="{$user_uri}">{$name}</a></li>
              <li role="presentation"><a href="{$logout}">Log out</a></li>
            {else}
              <li role="presentation"><a href="{$login}">Log in</a></li>
            {/if}
          </ul>
        </nav>
        <a href="/"><h3 class="text-muted">Fabricate Diem</h3></a>
      </div>
{/template}

{template .footer}
    </div>
  </body>
  {literal}
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-89614301-1', 'auto');
    ga('send', 'pageview');
  </script>
  {/literal}
</html>
{/template}

{template .main}
    {call .header data="all" /}
    Welcome to fabricate diem!
    <div><a href="/+/new">Create a new project.</a></div>
    {call .footer data="all" /}
{/template}

{template .fabric}
    {call .header data="all" /}
    <h1>Fabric editor</h1>
    <h2>Under construction!</h2>
    <p>You'll be able to use fabrics with patterns and change the properties of the fabric (weight,
    pile, stretchiness, etc.). If this is something you want, please
    <a href="https://www.github.com/kchodorow/fabricate-diem/17">upvote/comment on</a> the
    issue!</p>
    {call .footer data="all" /}
{/template}

{template .model}
    {call .header data="all" /}
    <h1>Model editor</h1>
    <h2>Under construction!</h2>
    <p>You'll be able to upload your own 3D models of yourself, your dog, your customer, whatever.
     Maybe I'll even figure out how to let you just input your measurements and get a 3D model out
     of it!  If any of that is of interest to you, please
    <a href="https://www.github.com/kchodorow/fabricate-diem/43">upvote/comment on</a> the
    issue!</p>
{/template}
